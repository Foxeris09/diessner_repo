<Window x:Class="malovani.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:malovani"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu Width="105" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="5,0,0,0">
            <MenuItem Header="Soubor">
                <MenuItem Header="Otevřít" Click="OpenItem_Click"/>
                <MenuItem Header="Uložit" Click="SaveItem_Click"/>
            </MenuItem>
            <MenuItem Header="Upravit"/>
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
            <Image Source="/brush.png" VerticalAlignment="Center" Height="28"/>
            <Label Content="Tloušťka štětce"  VerticalAlignment="Center" FontSize="17" />
            <Slider x:Name="sldWidth" Width="100" VerticalAlignment="Center" Minimum="1" Maximum="20" Value="1" ValueChanged="Slider_ValueChanged"/>
            <Label Content="Barva" VerticalAlignment="Center" FontSize="15"/>
            <Button x:Name="btnColor" Background="Black" Width="30" Height="30" VerticalAlignment="Center" Click="Button_Click"/>
        </StackPanel>
        <Canvas Grid.Row="2" Name="DrawingCanvas" Background="White" MouseMove="DrawingCanvas_MouseMove" MouseDown="DrawingCanvas_MouseDown" MouseUp="DrawingCanvas_MouseUp" />
        

    </Grid>
</Window>
