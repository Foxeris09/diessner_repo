<Window x:Class="rgb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rgb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle x:Name="rectColor" Margin="10" Fill="Black"/>

        <Grid Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="RGB míchátko" FontSize="30"/>

            <Label Content="Red" Background="Red" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="55" HorizontalAlignment="Left" FontSize="20" Grid.Row=" 1" Height="35"/>
            <TextBox x:Name="txtRed" Grid.Row="1" Text="0" PreviewTextInput="Integer" TextChanged="txtColor_TextChanged" TextWrapping="Wrap" Width="200" Height="20" FontSize="15"/>
            <Slider x:Name="sldRed" Grid.Row="2" ValueChanged="sldColor_ValueChanged" Minimum="0" Maximum="255" Value="0"/>

            <Label Content="Green" Background="LightGreen" FontSize="20" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row=" 3" Width="70" Height="40"/>
            <TextBox x:Name="txtGreen" Grid.Row="3" Text="0" PreviewTextInput="Integer" TextChanged="txtColor_TextChanged" TextWrapping="Wrap" Width="200" Height="20" FontSize="15"/>
            <Slider x:Name="sldGreen" Grid.Row="4" ValueChanged="sldColor_ValueChanged" Minimum="0" Maximum="255" Value="0"/>

            <Label Content="Blue" Background="DeepSkyBlue" FontSize="20" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row=" 5" Width="60" Height="40"/>
            <TextBox x:Name="txtBlue" Grid.Row="5" Text="0" PreviewTextInput="Integer" TextChanged="txtColor_TextChanged" TextWrapping="Wrap" Width="200" Height="20" FontSize="15"/>
            <Slider x:Name="sldBlue" Grid.Row="6" ValueChanged="sldColor_ValueChanged" Minimum="0" Maximum="255" Value="0"/>

            <Label x:Name="lblHex" Content="#000000" Grid.Row="7" FontWeight="Bold" FontSize="25"/>
        </Grid>

       

    </Grid>
</Window>
